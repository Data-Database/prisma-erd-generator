{
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/prisma-erd-generator.cjs.production.min.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "bin": "./dist/prisma-erd-generator.cjs.production.min.js",
  "scripts": {
    "dev": "concurrently \"docker compose up\" \"npm run start\"",
    "start": "tsdx watch",
    "build": "tsdx build",
    "prisma": "prisma generate",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "np"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "prisma-erd-generator",
  "author": "John Fay",
  "module": "./dist/prisma-erd-generator.esm.js",
  "size-limit": [
    {
      "path": "./dist/prisma-erd-generator.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/prisma-erd-generator.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.12.0",
    "concurrently": "^6.2.0",
    "husky": "^6.0.0",
    "np": "^7.5.0",
    "prisma": "^2.25.0",
    "size-limit": "^4.12.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^8.10.2",
    "@prisma/generator-helper": "^2.25.0",
    "mermaid": "^8.10.2",
    "mermaid-cli": "^0.2.4"
  }
}
